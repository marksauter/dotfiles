font-2 = Font Awesome 5 Free:style=Solid:pixelsize=15;3
font-3 = Font Awesome 5 Brands:style=Regular:pixelsize=15;3
font-4 = Noto Color Emoji:style=Regular:scale=8;3

tray-position = right
tray-padding = 1
tray-background = ${colors.black}

modules-left = wlan workspaces-xmonad title-xmonad
modules-center = temperature cpu memory
modules-right = weather alsa backlight date battery

[module/cpu]
