# ~/.config/polybar/config

[colors]
bg = #282A36
fg = #f8f8f2
black = #000000
black-alt = #4d4d4d
red = #ff5555
red-alt = #ff6367
green = #50fa7b
green-alt = #5af78e
yellow = #f1fa8c
yellow-alt = #f4f99d
blue = #bd93f9
blue-alt = #caa9fa
magenta = #ff79c6
magenta-alt = #ff92d0
cyan = #8be9fd
cyan-alt = #9aedfe
white = #bfbfbf
white-alt = #e6e6e6


[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
monitor = ${env:MONITOR:eDP-1}
bottom = false
width = 2560
height = 20
offset-x = 0
offset-y = 0
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 5
border-bottom-color = ${colors.bg}
border-top-size = 5
border-top-color = ${colors.bg}

spacing = 0
padding-left = 1
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Roboto:size=15;3
font-1 = Font Awesome 5 Free:style=Regular:pixelsize=15;3
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=15;3
font-3 = Font Awesome 5 Free Brands:pixelsize=15;3

tray-position = right
tray-padding = 1
tray-background = ${colors.black}

modules-left = wlan
modules-center = temperature cpu memory
modules-right = date battery

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.blue}
label = "%percentage% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.green}
label = "%percentage_used% "

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>

label-connected = "%essid% "
label-connected-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

label-discharging = "%percentage%% "
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-full = " full "
format-full-prefix = 
format-full-prefix-foreground = ${colors.cyan}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.yellow}

label-charging = "Charging %percentage%% "
label-charging-foreground = ${colors.fg}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.red}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = "%temperature-c% "
label-warn = "%temperature-c% "
label-warn-foreground = ${colors.red}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.cyan}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %a %d %b %Y"

time = " %H:%M "
time-alt = " %H:%M "

label = %date%%time%

format-prefix = 
format-prefix-foreground = ${colors.magenta}

