# Quick Switch To Directories
alias aur='cd ~/.aur'
alias blog='cd ~/Code/javascript/src/github.com/marksauter/markus-ninja-gatsby/'
alias dots='cd ~/.dotfiles'
alias audio='cd ~/Audio'
alias down='cd ~/Downloads'
alias code='cd ~/Code'
alias codego='cd ~/Code/go/src/github.com/marksauter/'
alias coders='cd ~/Code/rust/src/github.com/marksauter/'
alias codejs='cd ~/Code/javascript/src/github.com/marksauter/'
alias cloud='cd ~/Cloud'
alias pics='cd ~/Pictures'
alias clones='cd ~/Clones'

# Quick Config Editing
alias nvimrc='nvim ~/.config/nvim/init.vim'
alias bashrc='nvim ~/.bashrc'
alias xbindkeysrc='nvim ~/.xbindkeysrc'
alias xmobarrc='nvim ~/.xmobarrc'
alias xmonadhs='nvim ~/.xmonad/xmonad.hs'
alias reload='source ~/.bashrc'

# Miscellaneous Commands
alias ls="ls --group-directories-first --time-style=+'%m.%d.%Y %H:%M' --color=auto -hFX"
alias ll="ls -l --group-directories-first --time-style=+'%m.%d.%Y %H:%M' --color=auto -F"
alias la="ls -al --group-directories-first --time-style=+'%m.%d.%Y %H:%M' --color=auto -F"
alias grep='grep --color=tty -d skip'
alias google='ping -c1 8.8.8.8'
alias cp='cp -i'
alias df='df -h'
alias free='free -m'
alias rm='rm -i'
alias add_alias='nvim ~/.alias'
alias add_plug='nvim ~/.config/nvim/config/plugins.yaml'
